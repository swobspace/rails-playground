<div id="<%= dom_id task %>" class="list-group-item"
     data-sortable-target="item"
     data-url="<%= polymorphic_path([task.list, task])%>"
>
  <div class="row">
    <div class="col handle">#<%= task.id %>: <%= task.subject %></div>
    <div class="col-sm-3 text-muted text-end">
      <%=task.position %> | 
      <%= task.list %> |
      <%= delete_link([task.list, task]) %>
    </div>
  </div>
</div>
