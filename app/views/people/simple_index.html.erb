<p style="color: green"><%= notice %></p>

<h1>People</h1>

<p>
<i class="fas fa-info-circle"></i> A simpler table without buttons and search stuff.
</p>

<div id="people" class="mb-3">
  <div data-controller="datatables" data-datatables-simple-value="true">
    <table id="people_table" class="table">
      <thead>
        <tr>
          <th>Last name</th>
          <th>First name</th>
          <th>Username</th>
          <th>Birthdate</th>
          <th>City</th>
          <th class="notvisible">Active</th>
          <th class="notvisible">Category</th>
          <th class="nosort">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @people.each do |person| %>
          <%= content_tag(:tr, id: dom_id(person), class: dom_class(person)) do %>
            <td><%= person.sn %></td>
            <td><%= person.givenname %></td>
            <td><%= person.username %></td>
            <td><%= person.birthdate %></td>
            <td><%= person.city %></td>
            <td><%= person.active %></td>
            <td><%= person.category %></td>
            <td>
              <%= link_to "Show this person", person, target: '_top' %>
            </td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to "New person", new_person_path %>
